<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mnectar.mnectardisc.RewardsActivity"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/coins">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/coin_image"
                android:layout_alignParentEnd="true"
                android:scaleType="fitCenter"
                android:paddingTop="5dp"
                android:src="@drawable/coin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coin_count_rewards"
                android:textSize="24sp"

                android:layout_toStartOf="@id/coin_image" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/favorites_grid"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/spotify"
                android:onClick="launchSpotify"
                android:tag="@string/spotify_cost"
                android:padding="10dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/spotify_image"
                    android:src="@drawable/spotify"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 minutes of Spotify Premium"
                    android:layout_below="@id/spotify_image"
                    android:id="@+id/spotify_reward_name"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/spotify_reward_name"
                    android:layout_alignParentEnd="true"
                    android:background="#ccfd7201">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spotify_reward_cost"
                        android:text="@string/spotify_cost"
                        android:textColor="#fff"
                        android:gravity="center_horizontal"
                        android:shadowColor="#000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"

                        android:textSize="24sp"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="coin image"
                        android:scaleType="fitCenter"
                        android:src="@drawable/coin"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/pandora"
                android:onClick="launchPandora"
                android:tag="@string/spotify_cost"
                android:padding="10dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/pandora_image"
                    android:src="@drawable/pandora"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 minutes of Pandora One"
                    android:layout_below="@id/pandora_image"
                    android:id="@+id/reward_name"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/reward_name"
                    android:layout_alignParentEnd="true"
                    android:background="#ccfd7201">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/reward_cost"
                        android:textSize="24sp"
                            android:textColor="#fff"
                    android:gravity="center_horizontal"
                    android:shadowColor="#000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"

                        android:text="@string/pandora_cost"/>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="coin image"
                        android:scaleType="fitCenter"
                        android:src="@drawable/coin"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/navigation_drawer"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/navigation_drawer"/>
</android.support.v4.widget.DrawerLayout>

